{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Gross value added (GVA) by sector in 2020",
    "subtitle": ["as a % of total GVA"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Circular Std Book",
    "mark": {"line": {"interpolate": "linear"}},
    "view": {"stroke": "transparent", "width": 400, "height": 300},
    "range": {
      "category": [
        "#001f3f",
        "#4269d0",
        "#efb118",
        "#ff725c",
        "#6cc5b0",
        "#3ca951",
        "#ff8ab7",
        "#a463f2",
        "#97bbf5",
        "#9c6b4e"
      ],
      "diverging": ["#E6224B", "#E54753", "#C9C9C9", "#179FDB", "#122B39"],
      "heatmap": ["#C9C9C9", "#179FDB", "#0063AF", "#122B39"],
      "ordinal": ["#00A767", "#36B7B4", "#179FDB", "#0063AF", "#243B5A"]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Circular Std Book",
      "labelAngle": 0,
      "labelAlign": {"expr": "datum.value == 20 ? 'left' : 'center'"},
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": "", 
      "labelExpr": "datum.value+'%' + (datum.value == 20 ? ' of GVA' : '')"
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Circular Std Book",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7
    }
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "y": {"field": "sector", 
        "axis": {
          "labelLimit":0
        },
        "type": "nominal", "sort": "-x", "title": ""},
        "x": {"field": "value", "type": "quantitative", "title": ""},
        "color": {
          "condition": [
            {"test": "datum.sector === ' Financial and insurance'", "value": "#001f3f"}
          ],
          "value": "rgb(169,192,222)"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "text": {"expr": "datum.value + '%'"},
        "dx": 5
      },
      "encoding": {
        "y": {"field": "sector", "type": "nominal", "sort": "-x"},
        "x": {"field": "value",
         "type": "quantitative"},
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/louisflamencourt/GrowthLab/refs/heads/main/GVA_2000.csv",
    "format": {
      "type": "csv"
    }
  }
}
